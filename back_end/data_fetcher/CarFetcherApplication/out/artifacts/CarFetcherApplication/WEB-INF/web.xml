<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>GetCarsServlet</servlet-name>
        <servlet-class>com.lxnj.car_filter.servlets.GetCarsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetModelsByMakeServlet</servlet-name>
        <servlet-class>com.lxnj.car_filter.servlets.GetModelsByMakeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllActiveMakeServlet</servlet-name>
        <servlet-class>com.lxnj.car_filter.servlets.GetAllActiveMakeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSingleCarServlet</servlet-name>
        <servlet-class>com.lxnj.car_filter.servlets.GetSingleCarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCarsServlet</servlet-name>
        <url-pattern>/lookup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetModelsByMakeServlet</servlet-name>
        <url-pattern>/getModels</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllActiveMakeServlet</servlet-name>
        <url-pattern>/getAllMakes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSingleCarServlet</servlet-name>
        <url-pattern>/getSingleCar</url-pattern>
    </servlet-mapping>
</web-app>